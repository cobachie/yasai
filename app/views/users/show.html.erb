<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <h1>ユーザー</h1>
  </div>

  <form class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">名前</label>
      <div class="col-lg-10">
        <%= @user.name %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">名前カナ</label>
      <div class="col-lg-10">
        <%= @user.name_kana %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">Eメール</label>
      <div class="col-lg-10">
        <%= @user.email %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">住所</label>
      <div class="col-lg-10">
        <%= @user.address %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">電話</label>
      <div class="col-lg-10">
        <%= @user.tel %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">ユーザー区分</label>
      <div class="col-lg-10">
        <%= @user.display_auth %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to users_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span> 一覧に戻る
        <% end %>
        <%= link_to edit_user_path(@user), :class => 'btn btn-primary' do %>
	    　　<span class="glyphicon glyphicon-pencil"></span>　編集する
	  　　<% end %>
      </div>
    </div>

    </fieldset>
  </form>
</div>
