<div class="container" style="margin-top:60px;">

<div class="page-header">
  <h1><%= @date.strftime("%-m月%-d日")%> 出荷予定一覧</h1>
  <a href="/schedules/<%= @date.year %>/<%= @date.month %>/<%= @date.day %>" class="btn btn-default"><i class="fa fa-users"></i> 直売所スケジュールに戻る</a>

</div>

<fieldset>
<% @cultivars.each do |cultivar| %>
  
    <div class="form-group">
      <label for="#" class="col-lg-2 control-label"><%= cultivar.name %></label>
      <div class="col-lg-10">
        <% if @schedules.present? %>
          <% @schedules[cultivar.id].each do |schedule| %>
          <ul class="list-inline">
            <li><span><%= schedule.producer.name rescue nil %></span></li>
            <li><span><%= schedule.amount %></span></li>
            <li><span style="font-size: 90%"><%= cultivar.unit %></span></li>
          </ul>
          <% end %>
        <% end %>
      </div>
    </div>
  
<% end %>

</fieldset>



</div>
