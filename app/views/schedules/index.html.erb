<div class="container" style="margin-top:60px;">

<div class="page-header">
  <h1>直売所スケジュール</h1>
</div>

<ul class="pager">
  <% today = Date.today %>
  <% prevday = @from_date - 7.days %>
  <% nextday = @to_date + 1.day %>
  <li class="previous">
    <a href="/schedules/<%= prevday.year %>/<%= prevday.month %>/<%= prevday.day %>"><i class="fa fa-arrow-left"></i> 前へ</a>
  </li>
  <li><a href="/schedules/<%= today.year %>/<%= today.month %>/<%= today.day %>">今日</a></li>
  <li class="next">
    <a href="/schedules/<%= nextday.year %>/<%= nextday.month %>/<%= nextday.day %>">次へ <i class="fa fa-arrow-right"></i></a>
  </li>
</ul>

<div class="table-responsive">

  <table class="table table-bordered">
    <thead>
      <tr>
        <% (@from_date..@to_date).each do |date| %>
          <th style="width:150px;" class="cal_date <%= wday_color_class(date) %> text-center"><%= date.strftime('%-m月%-d日') %> (<%= wday_tag(date) %>)</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% if false %>
      <tr>
        <% (@from_date..@to_date).each do |date| %>
          <td><%= @weathers[date] %></td>
        <% end %>
      </tr>
      <% end %>

      <tr>
        <% (@from_date..@to_date).each do |date| %>
          <td class="<%= today_class(date) %>">
          <%= raw "#{@events[date].map(&:display_event).join('<br />')}" %>
          </td>
        <% end %>
      </tr>

      <tr>
        <% (@from_date..@to_date).each do |date| %>
          <td class="<%= today_class(date) %>">
            <% @schedules[date].each do |t| %>
              <% cultivar = Cultivar.find_by_id(t.cultivar_id) %>
              <%= raw "#{Cultivar.find_by_id(t.cultivar_id).name}: <span class='sum'>#{t.sum}</span> #{cultivar.unit} <br>" %>
            <% end %>
          </td>
        <% end %>
      </tr>

      <tr>
        <% (@from_date..@to_date).each do |date| %>
          <td class="text-center <%= today_class(date) %>">
            <a href="/schedules/show/<%= date.year %>/<%= date.month %>/<%= date.day %>" class="btn btn-default btn-xs">出荷予定詳細</a></td>
        <% end %>
      </tr>

    </tbody>

  </table>
</div>

<ul class="pager">
  <li><a href="/schedules/<%= @from_date.year %>/<%= @from_date.month %>/<%= @from_date.day %>/<%= @app_user %>">
  <span class="glyphicon glyphicon-user"></span> マイスケジュール</a></li>
</ul>

</div>

