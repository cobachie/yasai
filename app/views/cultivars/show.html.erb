<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <h1>品目</h1>
  </div>

  <form class="form-horizontal">
	  <fieldset>
	    <div class="form-group">
	      <label for="#" class="col-lg-2 control-label">名前</label>
	      <div class="col-lg-10">
	        <%= @cultivar.name %>
	      </div>
	    </div>

	    <div class="form-group">
	      <label for="#" class="col-lg-2 control-label">単位</label>
	      <div class="col-lg-10">
	      	<%= @cultivar.unit %>
	      </div>
	    </div>

	    <div class="form-group">
	      <div class="col-sm-offset-2 col-sm-10">
	        <%= link_to cultivars_path, :class => 'btn btn-default' do %>
	          <span class="glyphicon glyphicon-list-alt"></span> 一覧に戻る
	        <% end %>
	        <%= link_to edit_cultivar_path(@cultivar), :class => 'btn btn-primary' do %>
		    　　<span class="glyphicon glyphicon-pencil"></span>　編集する
		  　　<% end %>
	      </div>
	    </div>

	</fieldset>
  </form>
</div>
