<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <h1>品目一覧</h1>
    <%= link_to new_cultivar_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>　新規登録
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>単位</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @cultivars) do |cultivar| %>
          <td><%= link_to cultivar.name, cultivar %></td>
          <td><%= cultivar.unit %></td>

          <td class="text-center">
            <%= link_to edit_cultivar_path(cultivar) do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %></td>
          <td class="text-center">
            <%= link_to cultivar, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>