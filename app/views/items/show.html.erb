<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <h1>商品詳細</h1>

    <%= link_to items_path, :class => 'btn btn-default' do %>
      <i class="fa fa-arrow-left"></i>  商品一覧へ戻る
    <% end %>

    <%= link_to edit_item_path(@item), :class => 'btn btn-primary' do %>
      <i class="fa fa-pencil"></i> 変更する
    <% end %>

  </div>

  <p class="text-info" id="notice"><%= notice %></p>

  <div class="panel panel-primary">
    <div class="panel-body">
      <dl class="dl-horizontal">

        <dt>コード</dt>
        <dd><%= @item.code %></dd>

        <dt>名称</dt>
        <dd><%= @item.name %></dd>

        <dt>単価</dt>
        <dd><%= number_to_currency(@item.price, :format => "%u%n", :unit => "￥", precision: 0) %></dd>

        <dt>説明</dt>
        <dd><%= @item.try(:description) || '未登録' %></dd>

        <dt>生産者</dt>
        <dd><%= @item.try(:producer_id) || '未登録' %></dd>        

        <dt>収穫日</dt>
        <dd><%= @item.harvested_at.strftime('%Y/%m/%d') if @item.harvested_at %></dd>

        <dt>画像</dt>
        <dd>
        <%= img_tag @item.image_path, width: 360, class: "img-responsive img-rounded" %>
        </dd>
      </dl>
    </div>
  </div>

</div>
