<div class="container" style="margin-top:60px;">
  <h1><i class="fa fa-shopping-cart fa-lg"></i>　お買い物かご</h1>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>商品</th>
            <th>価格</th>
            <th>個数</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% amount = 0 %>
          <% @baskets.each do |basket| %>
            <tr>
            <td>
            <div class="row">
              <div class="col-md-4">
                <%= img_tag basket.item.image_path, width: 100, class: "img-responsive img-rounded" %>
              </div>
              <div class="col-md-8">
                <%= basket.item.name %>
              </div>
            </div>
            </td>
            <td><%= number_to_currency(basket.item.price, :format => "%u%n", :unit => "￥", precision: 0) %></td>
            <td><%= basket.number %>個</td>
            <td>
            <% amount += (basket.item.price * basket.number) %>
            <%= number_to_currency((basket.item.price * basket.number), :format => "%u%n", :unit => "￥", precision: 0) %></td>
            <td>
              <%= link_to "/baskets/#{basket.id}?tour=#{@tour_code}&user_id=#{@user_id}", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash-o"></i> 削除
              <% end %>
            </td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
          <tr>
            <td colspan="3"><p class="pull-right">合計金額</p></td>
            <td><%= number_to_currency(amount, :format => "%u%n", :unit => "￥", precision: 0) %></td>
            <td></td>
          </tr>
        </tfoot>

      </table>
    </div>

    <%= link_to items_path(tour: @tour_code, user_id: @user_id), :class => 'btn btn-primary' do %>
      <h5>商品一覧へもどる</h5>
    <% end %>

    <%= link_to "/tours/#{@tour_code}/user", :class => 'btn btn-primary' do %>
      <h5>お買い物をやめる</h5>
    <% end %>

    <%= link_to "/baskets/#{@tour_code}/order/#{@user_id}", :class => 'btn btn-danger' do %>
      <h5><i class="fa fa-check"></i> <strong>注文を確定する</strong></h5>
    <% end %>

</div>



