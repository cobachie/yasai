<div class="container" style="margin-top:60px;">

<div class="page-header">
  <h1>イベント一覧</h1>

  <%= link_to new_event_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>　新規登録
  <% end %>

</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>開始日</th>
        <th>終了日</th>
        <th>タイトル</th>
        <th>場所</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @events) do |event| %>
        <td><%= event.start_at.strftime('%Y/%m/%d %H:%M') if event.start_at %></td>
        <td><%= event.end_at.strftime('%Y/%m/%d %H:%M') if event.end_at %></td>
        <td><%= link_to event.title, event %></td>
        <td><%= event.place %></td>
        <td class="text-center">
          <%= link_to edit_event_path(event) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %></td>
        <td class="text-center">
          <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %></td>
      <% end %>
    </tbody>
  </table>
</div>

</div>
