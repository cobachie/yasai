<div class="container" style="margin-top:60px;">
  <div class="page-header">
	<h1>お客様番号選択</h1>

	<p>お客様番号を選択してください</p>
  </div>

  <div class="row">
  	<% num = @tour.try(:participant_num) || 50 %>
	<% (1..num).each do |i| %>
	  <div class="col-xs-2 <%= 'col-xs-offset-1' if i % 5 == 1 %>" style="padding:2px;">
	  	<a href="/shopping/<%= params[:tour] %>/<%= i %>" type="button" class="btn btn-info" style="width: 100%; margin:5px;"><span class="title_lg"><%= i %></span></a>
	  </div>
	<% end %>
  </div>
</div>

<% if false %>
	<%= form_tag "/items/tour/#{params[:tour]}", method: 'GET', style:"margin-bottom:30px;" do %>
	  <div class="form-group">
	    <div class="col-sm-8">
	      <%= text_field_tag :user_id, '', class: "form-control" %>
	    </div>
	    <div class="col-sm-4">
	      <%= submit_tag "次へ", class: "btn btn-primary" %>
	    </div>
	  </div>
	<% end %>
<% end %>


