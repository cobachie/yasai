<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <h1>ツアー一覧</h1>
    <%= link_to new_tour_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span> 新規登録
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>ツアー名称</th>
          <th></th>
          <th>注文状況</th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @tours) do |tour| %>
          <td><%= tour.name %></td>
          <td><%= link_to '選択', "/tours/#{tour.code}/user" %></td>
          <td><%= link_to '注文一覧', orders_path(tour: tour.code) %></td>
        <% end %>
      </tbody>
    </table>
  </div>

</div>