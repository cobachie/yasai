<div class="page-header">
  <%= link_to new_tour_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tour
  <% end %>
  <h1>Listing tours</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>ツアー名称</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tours) do |tour| %>
            <td><%= tour.name %></td>
            <td><%= link_to '商品一覧へ', items_path(tour: tour.code) %></td>
      <% end %>
    </tbody>
  </table>
</div>
