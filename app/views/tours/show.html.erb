<div class="container" style="margin-top:60px;">

<div class="page-header">
  <%= link_to tours_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_tour_path(@tour), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show tour</h1>
</div>

<dl class="dl-horizontal">
  <dt>code</dt>
  <dd><%= @tour.code %></dd>

  <dt>name</dt>
  <dd><%= @tour.name %></dd>
</dl>

</div>
