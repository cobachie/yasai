<div class="container" style="margin-top:60px;">

<div class="page-header">
  <h1>ご注文内容(お客様番号：<%= @order.user_id %>)</h1>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>商品</th>
        <th>数量</th>
        <th>金額</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @order.order_items) do |order_item| %>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.number %></td>
        <td><%= number_to_currency(order_item.price, :format => "%u%n", :unit => "￥", precision: 0) %></td>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="2"><p class="pull-right">合計金額</p></td>
        <td><%= number_to_currency(@order.amount, :format => "%u%n", :unit => "￥", precision: 0) %></td>
      </tr>
    </tfoot>

  </table>
</div>

<div style="margin: 10px 0;">
  <%= link_to orders_path(tour: @tour.code), :class => 'btn btn-primary' do %>
    <i class="fa fa-arrow-circle-left"></i> 戻る
  <% end %>
</div>

</div>
